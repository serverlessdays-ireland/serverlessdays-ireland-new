---
import { Icon } from 'astro-icon'

const { src = '/astronaut-hero-img.webp' } = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-4xl md:text-left">
          <slot>
            <span class="text-gradient">ServerlessDays </span><span class="text-gradient-secondary">Ireland </span>
          </slot><br />
          <slot><span class="text-tagline">One Day, One Track,One Community</span></slot><br /><br />
          <slot>
            <span class="text-3xl">23 August 2023<br />
            The Guinness Storehouse, <br />
            St. James's Gate, Dublin 8</span>
          </slot>
        </h1>
        <div class="flex flex-col gap-3 min-[50px]:flex-row">
          <a target="_blank"
            class="button has-icon color-secondary"
            href="https://www.eventbrite.com/e/serverlessdays-dublin-2023-tickets-562937881357"
          >
            <Icon pack="ion" name="ticket-outline" />
            Reserve your spot
          </a>
        </div>
      </div>
      <img class="hidden lg:block" src={src} alt="" decoding="async" />
    </div>
  </div>
</section>
<section>
  <div class="container">
    <slot><span class="text-welcome"><i>Céad míle fáilte</i> and welcome to ServerlessDays Ireland</span></slot><br />
  </div>
</section>
  <!--  

    This is the style sheet for this page

