<style lang="scss">
  .text-welcome {
    font-family: 'Open Sans';
    src: local('Open Sans ExtraBold'), local('OpenSans-ExtraBold'), url('/fonts/OpenSans-ExtraBold.woff2') format('woff2'),
    url('/fonts/OpenSans-ExtraBold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
    font-size: 2.67em;
    margin-left: 14px;
  }

  .text-tagline {
    font-family: 'Open Sans';
    src: local('Open Sans ExtraBold'), local('OpenSans-ExtraBold'), url('/fonts/OpenSans-ExtraBold.woff2') format('woff2'),
    url('/fonts/OpenSans-ExtraBold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
    font-size: 0.757em;
  }

  .text-gradient {
    background: linear-gradient(315deg, var(--dublin-primary-100) 35%, var(--dublin-secondary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 2.75rem;
    line-height: 3.375rem;
    font-weight: 800;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--dublin-primary-100) 35%, var(--dublin-secondary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .text-gradient-secondary {
    background: linear-gradient(315deg, var(--dublin-orange-100) 45%, var(--dublin-primary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 2.75rem;
    line-height: 3.375rem;
    font-weight: 800;
  }

  :global(.darkmode .text-gradient-secondary) {
    background: linear-gradient(315deg, var(--dublin-orange-100) 45%, var(--dublin-primary-100));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
